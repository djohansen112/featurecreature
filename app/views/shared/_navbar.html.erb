<div class="navcontainer">
  <div class="navlogoContainer">
    <span><%= link_to image_tag("orc_avatar.png", class:"imageLogo"), root_path%></span>
  </div>
  <div class="navtitleContainer">
    <h1 id="navTitle">Quality Quest</h1>
    <h4> <%= @randquote %> </h4>
  </div>
  <div class="auth-nav">
    <ul class="auth-nav-top">
      <% if user_signed_in? %>
        <span>Signed In as: <%= current_user.username %></span>
        <li><%= link_to "Profile", edit_user_registration_path%></li>
        <li><%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }%></li>
        <% if current_user.role_id == 1%>
          <li><%= link_to "New Post", new_post_path %></li>
        <%end%>
      <% else %>
        <li><%= link_to "Sign in", new_user_session_path %></li>
        <li><%= link_to "Sign up", new_user_registration_path%></li>
      <%end%>
    </ul>
    <ul class="auth-nav-bottom">
      <li> <%= link_to "Home", root_path%>      </li>
      <li> <%= link_to "Categories", categories_path%></li>
      <li> <%= link_to "About", about_path %>     </li>
      <li> <%= link_to "Contact", contact_path%>   </li>
    </ul>
  </div>
</div>