<% if user_signed_in? %>
  <%= form_for [@post, @newcomment] do |form| %>
    <% if form.object.errors.any? %>
      <% form.object.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end%>
    <% end%>
    <div>
      <%= form.label :body%>
      <%= form.text_field :body%>
    </div>
    <%= form.button "Submit"%>
  <% end %>
<% else%>
  You must sign in to leave a comment.
<%end%>